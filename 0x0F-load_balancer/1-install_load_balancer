#!/usr/bin/env bash
#Install load balancer HAproxy

sudo apt-get -y update
sudo apt install -y haproxy
echo "
frontend http
	bind *:80
	mode http
	default_backend web
	
	
backend web
	balance roundrobin
	server web-01 35.153.93.19:80 check
	server web-02 54.172.31.233:80 check" >> /etc/haproxy/haproxy.cfg

sudo systemctl enable haproxy
sudo systemctl restart haproxy
